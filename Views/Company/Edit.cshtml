@model Company


@{
    ViewData["Title"] = "Edit company";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<div style="font-size:50px; margin-top:10px">
    <a data-toggle="tooltip" title="Go back to company details" href="@Url.Action("Details", "Company", new { id = Model.Id })">
        <i class="glyphicon glyphicon-arrow-left"></i>
    </a>
</div>

<div>
    <h1 style="margin-top:0px">Edit company</h1>
    <div class="table-bordered" style="border:1px solid black">
        <div style="margin:30px">
            @using (Html.BeginForm("Edit"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <label>Company name</label>
                <div>
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger " })
                </div>

                <div style="margin-top:30px">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }
        </div>
    </div>
</div>
